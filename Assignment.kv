BoxLayout:
    id: mainBox
    #app.loading_items()
    Popup:
        id: popup
        title: "Add Item"
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Item Name:'

            TextInput:
                id: Item_Name
                multiline: False
                write_tab: False

            Label:
                text: 'Description:'

            TextInput:
                id: Item_Description
                multiline: False
                write_tab: False

            Label:
                text: 'Price Per Day:'

            TextInput:
                id: Item_Price
                multiline: False
                write_tab: False

            Button:
                text: 'Save Item'
                on_release: app.save_item(Item_Name.text, Item_Description.text, Item_Price.text)

            Button:
                text: 'Cancel'
                on_release: app.press_cancel()

            Label:
                text: 'Enter Details For A New Item'


    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'

                Button:
                    id: list_buttons
                    text: 'List Items'
                    on_press: app.list_buttons()

                Button:
                    id: hire_button
                    text: 'Hire Items'
                    on_press: app.hire_button()

                Button:
                    id: return_button
                    text: 'Return Items'
                    on_press: app.return_button()

                Button:
                    id: BUTTON_FUNCTION_HERE
                    text: 'Confirm'
                    #on_press: app.convert_button()

                Button:
                    id: addButton
                    text: 'Add New Entry'
                    on_press: app.press_add()

            GridLayout
                id: entriesBox
                cols: 2

        Label:
            id: BUTTON_FUNCTION_HERE
            font_size: 20
            text: 'Choose an action on the left menu and choose items on the right'
            color: (1, 1, 0, 1)

